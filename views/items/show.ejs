<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head'); %>

    <body class="container">
        <%- include('../partials/header'); %>
            <main>

                <div class="card">
                    <div class="card-header">
                        <h4>
                            <%= title %>
                                <a href="/items" class="btn btn-danger float-end">Back</a>
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-2">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name" value="<%= items.name %>">
                        </div>
                        <div class="form-group my-2">
                            <label for="status">Status:</label>
                            <input type="text" class="form-control" id="status" value="<%= items.status %>">
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../partials/footer'); %>
    </body>

</html>