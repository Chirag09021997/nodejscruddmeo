<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head'); %>

    <body class="container">
        <%- include('../partials/header'); %>
            <main>
                <div class="card">
                    <div class="card-header">
                        <h4>
                            <%= title %>
                                <a href="/items" class="btn btn-danger float-end">Back</a>
                        </h4>
                    </div>
                    <div class="card-body">
                        <form action="/items/<%= items.id %>?_method=PATCH" method="post">
                            <div class="form-group mb-2">
                                <label for="name">Name:</label>
                                <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name"
                                    value="<%= items.name %>">
                            </div>

                            <div class="form-group mb-2">
                                <label for="status">Status:</label>
                                <select class="form-select" name="status" id="status">
                                    <option value="Active" <%=items.status==='Active' ? 'selected' : '' %>>Active
                                    </option>
                                    <option value="InActive" <%=items.status==='InActive' ? 'selected' : '' %>>InActive
                                    </option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
            </main>

            <%- include('../partials/footer'); %>
    </body>

</html>